// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================
// Better Auth Models
// =============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Resume fields
  resumeUrl       String?   // 履歷檔案路徑
  resumeFileName  String?   // 原始檔名（用於顯示）
  resumeContent   String?   @db.Text  // Gemini 解析的結構化內容 (JSON string)
  resumeUpdatedAt DateTime? // 履歷更新時間

  sessions        Session[]
  accounts        Account[]
  interviews      Interview[]
  settings        UserSettings?
  backgroundTasks BackgroundTask[]

  @@map("users")
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  accountId         String
  providerId        String
  accessToken       String? @db.Text
  refreshToken      String? @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope             String? @db.Text
  idToken           String? @db.Text
  password          String? @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@index([userId])
  @@map("accounts")
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verifications")
}

// =============================================
// Application Models
// =============================================

model Interview {
  id                String   @id @default(cuid())
  userId            String
  status            String   @default("pending") // pending, in_progress, completed
  duration          Int?     // in seconds
  feedback          String?  // AI generated feedback
  transcript        Json?    // conversation transcript
  score             Int?     // overall score 0-100
  strengths         String[] // strengths
  improvements      String[] // improvement suggestions
  jobDescriptionUrl String?  @db.Text  // Job description URL
  jobDescription    Json?               // Full job description object
  modelAnswer       Json?               // { transcript: TranscriptEntry[], audioUrl?: string }
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("interviews")
}


// =============================================
// User Settings
// =============================================

model UserSettings {
  id                String   @id @default(cuid())
  userId            String   @unique
  preferredLanguage String   @default("zh-TW")
  notifications     Json?
  theme             String   @default("light")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_settings")
}

// =============================================
// Background Tasks (Job Queue)
// =============================================

model BackgroundTask {
  id         String   @id @default(cuid())
  userId     String
  type       String   // 'interview_analysis' | 'resume_parsing'
  status     String   @default("pending")
  resourceId String?  // interviewId or null
  progress   Int      @default(0)
  error      String?  @db.Text
  result     Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
  @@index([status])
  @@map("background_tasks")
}
